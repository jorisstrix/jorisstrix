{
    "name": "Jekyll Minimal",
    "image": "jekyll/builder:stable",  // Jekyll's official image with necessary dependencies
    "customizations": {
      "vscode": {
        "extensions": ["rebornix.ruby", "yzhang.markdown-all-in-one"]
      }
    },
    "postCreateCommand": "bundle install",
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "remoteUser": "vscode",
    "forwardPorts": [4000]
  }  
  